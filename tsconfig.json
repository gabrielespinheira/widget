{
  "compilerOptions": {
    "target": "ESNext",
    "composite": true,
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@react/*": [
        "./react-web/*"
      ],
      "@ui/*": [
        "./src/components/*"
      ],
      "@core/*": [
        "./core/*"
      ]
    }
  },
  "include": [
    "src",
    "react-web",
    "core",
    "react-bindings",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}