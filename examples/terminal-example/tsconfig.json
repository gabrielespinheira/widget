{
    "references": [
        {
            "path": "../../tsconfig.json"
        }
    ],
    "compilerOptions": {
        "target": "ES2018",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2018"
        ],
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "allowJs": true,
        "paths": {
            "@core/*": [
                "../../core/*"
            ]
        }
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}